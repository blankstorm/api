{
	"compilerOptions": {
		"lib": ["ESNext", "DOM"],
		"module": "NodeNext",
		"target": "ES2017",
		"declaration": true,
		"outDir": "dist",
		"typeRoots": ["node_modules/@types"],
		"moduleResolution": "NodeNext",
		"esModuleInterop": true,
		"noImplicitThis": true,
		"baseUrl": "src"
	},
	"files": ["src/index.ts"],
	"include": ["src"],
	"exclude": ["node_modules"]
}
